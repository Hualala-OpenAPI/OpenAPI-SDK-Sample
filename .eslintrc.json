{
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier",
        "react-hooks"
    ],
    // 0关闭 1 警告 2错误
    "rules": {
        "no-unused-vars" : 0 ,
        "multiline-ternary": 0,
        "no-use-before-define": 0,
        "array-callback-return": 0,
        "space-before-function-paren": 0,
        "@typescript-eslint/no-use-before-define": 0,
        "@typescript-eslint/no-unused-vars" : 2,
        "indent": 0
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "JSX": "readonly",
        "React": "readonly",
        "NodeJS": "readonly"
    }
}
